<%= render partial: 'sourcebuster/shared/error_messages', locals: { object: f.object } %>

<table>
  <tr>
    <td>Domain:</td>
    <td><%= f.text_field :domain, placeholder: "domain.com" %></td>
  </tr>
  <tr>
    <td>Alias:</td>
    <td><%= f.text_field :source_alias, placeholder: "Source alias" %></td>
  </tr>
  <tr>
    <td>Referer type:</td>
    <td><%= f.select :referer_type_id, Sourcebuster::RefererType.all.map { |rt| [rt.referer_type, rt.id] } %></td>
  </tr>
  <tr>
    <td>Organic query param:</td>
    <td><%= f.text_field :organic_query_param, placeholder: "Organic query param" %></td>
  </tr>
</table>